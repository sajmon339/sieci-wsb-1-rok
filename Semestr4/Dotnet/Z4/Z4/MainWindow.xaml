<Window x:Class="Z4.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Kategorie" Height="350" Width="525">
    <Grid>
        <ListView Name="CategoryList" MouseDoubleClick="CategoryList_MouseDoubleClick">
            <ListView.View>
                <GridView>
                    <GridViewColumn Header="Nazwa" DisplayMemberBinding="{Binding Name}" Width="120"/>
                    <GridViewColumn Header="Opis" DisplayMemberBinding="{Binding Description}" Width="380"/>
                </GridView>
            </ListView.View>
        </ListView>
    </Grid>
</Window>
