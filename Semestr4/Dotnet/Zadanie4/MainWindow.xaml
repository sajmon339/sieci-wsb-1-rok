<Window x:Class="Zadanie4.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Lista Kategorii" Height="400" Width="600">
    <Grid>
        <ListBox ItemsSource="{Binding Categories}" DisplayMemberPath="Name" Margin="10" 
                 MouseDoubleClick="OnCategoryDoubleClick"/>
    </Grid>
</Window>
